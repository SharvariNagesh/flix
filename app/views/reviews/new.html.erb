<header id="content-header">
  <h1>New Review for <%= link_to(@movie.title, @movie) %></h1>
</header>
 
 <%= render partial: "shared/errors", :locals => { :object => @review} %>
<%= form_for([@movie, @review]) do |f| %>
 
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true %>
      </li>
      <li class="required">
        <%= f.label :stars %>
        <%= f.select :stars, Review::STARS, prompt: "Pick one" %>
      </li>
      <li class="required">
        <%= f.label :comment %>
        <%= f.text_area :comment, cols: 80 %>
      </li>
  </ol>
  <p>
      <%= f.submit 'Post Review' %>
      <%= link_to "Cancel", movie_reviews_path, class: 'button' %>
  </p>
<%end%>
  </fieldset>
      